{
  "name": "spilled",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "devDependencies": {
    "ava": "^1.4.1",
    "browser-env": "^3.2.6",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "esm": "^3.2.22",
    "husky": "^2.3.0",
    "nyc": "^14.0.0",
    "prettier": "^1.17.0",
    "web-ext": "^3.0.0"
  },
  "webExt": {
    "artifactsDir": "build",
    "build": {
      "overwriteDest": true
    },
    "lint": {
      "warningsAsErrors": true
    },
    "ignoreFiles": [
      "coverage/",
      "package.json",
      "package-lock.json",
      "test/",
      "README.md"
    ]
  },
  "scripts": {
    "build": "npm run test && npm run lint:web-ext && npm run lint:js && web-ext build",
    "pre-commit": "npm run test && npm run lint:web-ext && npm run fix:js",
    "fix:js": "eslint **/*.js --fix",
    "lint:js": "eslint **/*.js",
    "lint:web-ext": "web-ext lint",
    "run:firefox": "web-ext run --verbose",
    "test": "nyc --reporter=html --reporter=text ava"
  },
  "nyc": {
    "all": true,
    "include": [
      "js/**/*.js"
    ],
    "exclude": [
      "js/overview.js",
      "js/background/main.js",
      "js/background/BrowserAPI/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PrinsFrank/Spilled.git"
  },
  "author": "Frank Prins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PrinsFrank/Spilled/issues"
  },
  "homepage": "https://github.com/PrinsFrank/Spilled#readme",
  "ava": {
    "require": [
      "esm",
      "./test/_setup.js"
    ]
  },
  "dependencies": {}
}
