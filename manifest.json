{
  "manifest_version": 2,
  "name": "Spilled",
  "version": "1.0",
  "description": "Identifies data on pages and in cookies",
  "homepage_url": "https://github.com/PrinsFrank/WebExtension_Data_Leakage_Detector",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background/functions/generateHTML.js",
      "js/background/functions/formatConversion.js",
      "js/background/main.js",
      "js/background/filters/cookies.js"
    ]
  },
  "permissions": [
    "tabs",
    "cookies",
    "<all_urls>"
  ],
  "browser_action": {
    "browser_style": true,
    "default_popup": "html/popup.html",
    "default_title": "Spilled",
    "default_icon": {
      "16": "icons/favicon-16.png",
      "32": "icons/favicon-32.png"
    }
  }
}